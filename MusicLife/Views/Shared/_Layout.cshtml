                <li>@Html.ActionLink("Радио", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Мое меню", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Админка", "Index", "Home", new { area = "" }, null)</li>
            </ul>
        </nav>

        <section id="leftMenu">
            <menu>
                <li>@Html.ActionLink("Pop", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("REP", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("ROCK", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Electronic", "Index", "Home", new { area = "" }, null)</li>
            </menu>
        </section>

        <section class="content">
            @RenderBody()
        </section>
        
        <footer class="footer">
            <p>Тут дополнительное меню</p>
            <p>Тут правовая информация</p>
        </footer>

        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
