<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <header class="header">
            <p>Header</p>
        </header>

        <nav class="nav">
            <ul>
                <li>@Html.ActionLink("ML", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Новости", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Музыка", "Index", "Home", new { area = "" }, null)</li>
                <li>@Html.ActionLink("Видео", "Index", "Home", new { area = "" }, null)</li>
